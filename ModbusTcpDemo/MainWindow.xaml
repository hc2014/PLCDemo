<Window x:Class="ModbusTcpDemo.MainWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:ModbusTcpDemo"
        Title="Modbus TCP Demo" Width="526.604" Height="355.66">

    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="20">
        <StackPanel>

            <Button Content="连接 PLC"
                    Command="{Binding ConnectCommand}"
                    Width="150" Height="35"/>

            <TextBlock Text="Register 0:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Reg0}" FontSize="18"/>

            <TextBlock Text="Register 1:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Reg1}" FontSize="18"/>

        </StackPanel>
    </Grid>
</Window>
