<Window x:Class="WPFPlcDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:WPFPlcDemo.ViewModel"
        Title="WPF PLC Demo" Width="360" Height="280">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
            <TextBlock Text="IP:" VerticalAlignment="Center" Margin="0,0,4,0"/>
            <TextBox Width="120" Text="127.0.0.1" Name="txtIp"/>
            <TextBlock Text=" Port:" VerticalAlignment="Center" Margin="8,0,4,0"/>
            <TextBox Width="60" Text="502" Name="txtPort"/>
            <Button Content="Connect" Width="80" Margin="8,0,0,0" Command="{Binding ConnectCommand}" />
        </StackPanel>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Registers (0..9):" FontWeight="Bold"/>
            <ItemsControl ItemsSource="{Binding Registers}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Addr:" Width="40"/>
                            <TextBlock Text="{Binding Address}" Width="40"/>
                            <TextBlock Text="Value:" Width="40"/>
                            <TextBox Width="80" Text="{Binding Value, Mode=TwoWay}"/>
                            <Button Content="Write" Margin="6,0,0,0" 
                                    Command="{Binding DataContext.WriteSingleCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}" Width="60"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Write Multiple (0..4)" Width="160" Command="{Binding WriteMultipleCommand}"/>
                <TextBlock Text="  Connected:" VerticalAlignment="Center" Margin="8,0,0,0"/>
                <TextBlock Text="{Binding Connected}" VerticalAlignment="Center" Margin="4,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
